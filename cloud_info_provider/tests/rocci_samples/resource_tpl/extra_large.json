{
  "mixins":[
    {
      "term":"extra_large",
      "scheme":"http://fedcloud.egi.eu/occi/infrastructure/resource_tpl#",
      "title":"Extra Large Instance - 8 cores and 8 GB RAM",
      "location":"/mixin/resource_tpl/extra_large/",
      "depends":[
        "http://schemas.ogf.org/occi/infrastructure#resource_tpl"
      ],
      "applies":[
        "http://schemas.ogf.org/occi/infrastructure#compute"
      ],
      "attributes":{
        "occi":{
          "compute":{
            "architecture":{
              "Mutable":false,
              "Type":"string",
              "Default":"x64"
            },
            "cores":{
              "Mutable":false,
              "Type":"number",
              "Default":8
            },
            "speed":{
              "Mutable":false,
              "Type":"number",
              "Default":1
            },
            "memory":{
              "Mutable":false,
              "Type":"number",
              "Default":8
            },
            "ephemeral_storage":{
              "size":{
                "Mutable":false,
                "Type":"number",
                "Default": 40
              }
            }
          }
        }
      }
    }
  ]
}
