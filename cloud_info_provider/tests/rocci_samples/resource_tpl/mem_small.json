{
  "mixins":[
    {
      "term":"mem_small",
      "scheme":"http://fedcloud.egi.eu/occi/compute/flavour/1.0#",
      "title":"Small Instance - 1 core and 4 GB RAM",
      "location":"/mixin/resource_tpl/mem_small/",
      "depends":[
        "http://schemas.ogf.org/occi/infrastructure#resource_tpl"
      ],
      "applies":[
        "http://schemas.ogf.org/occi/infrastructure#compute"
      ],
      "attributes":{
        "occi":{
          "compute":{
            "architecture":{
              "Mutable":false,
              "Type":"string",
              "Default":"x64"
            },
            "cores":{
              "Mutable":false,
              "Type":"number",
              "Default":1
            },
            "speed":{
              "Mutable":false,
              "Type":"number",
              "Default":1
            },
            "memory":{
              "Mutable":false,
              "Type":"number",
              "Default":4
            },
            "ephemeral_storage":{
              "size":{
                "Mutable":false,
                "Type":"number",
                "Default": 10
              }
            }
          }
        }
      }
    }
  ]
}
